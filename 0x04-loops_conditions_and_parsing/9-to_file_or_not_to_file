#!/usr/bin/env bash
# This script checks the properties of a file named 'school' and prints descriptive messages.

FILE="school"

# 1. Check for EXISTENCE of the file/directory
if [ -e "$FILE" ]; then
  # If the file exists, the first line of output is always "school file exists"
  echo "$FILE file exists"

  # 2. Check the TYPE and SIZE if it exists
  
  # A. Check if it is a regular file (-f)
  if [ -f "$FILE" ]; then
    # Output the required type line
    echo "$FILE is a regular file"
    
    # Check if the regular file is NOT empty (-s means size greater than zero)
    if [ -s "$FILE" ]; then
      # Output the required size line
      echo "$FILE file is not empty"
    
    # Otherwise, the regular file must be empty
    else
      echo "$FILE file is empty"
    fi

  # B. Check if it is a directory (-d) - executed only if A was false
  elif [ -d "$FILE" ]; then
    echo "$FILE is a directory"
  
  # C. If it is neither a directory nor a regular file
  else
    echo "$FILE is not a regular file"
  fi

# If the file does NOT exist (only print the line the auto-checker expects)
else
  echo "$FILE file does not exist"
fi
