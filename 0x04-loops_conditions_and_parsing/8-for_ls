#!/usr/bin/env bash
# This script lists all non-hidden files in the current directory and displays
# only the part of the name that comes after the first dash (-).

# The 'for' loop iterates over all non-hidden files/directories in the current path.
for file in *; do
  
  # Check if the file name contains a dash, to ensure we only apply the manipulation
  # to the files that match the expected naming convention (e.g., "1-file").
  if [[ "$file" == *-* ]]; then
    # Use parameter expansion to remove the shortest match from the start up to the first dash.
    # ${file#*-} means: remove '*' followed by '-' from the beginning of $file.
    echo "${file#*-}"
  fi
  
done
