#!/usr/bin/env bash
# This script displays numbers from 1 to 20, replacing superstitious numbers with custom messages.

# 1. Initialize a counter variable
COUNT=1

# 2. Loop while COUNT is less than or equal to 20
while [ $COUNT -le 20 ]; do
  
  # 3. Use the 'case' statement to check for specific numbers
  case $COUNT in
    4) # Case for the 4th iteration
      echo "bad luck from China"
      ;;
    9) # Case for the 9th iteration
      echo "bad luck from Japan"
      ;;
    11) # Case for the 11th iteration
      echo "bad luck from Italy"
      ;;
    13) # Case for the 13th iteration
      echo "bad luck from Japan"
      ;;
    17) # Case for the 17th iteration
      echo "bad luck from Italy"
      ;;
    *) # Default case: runs if none of the above numbers match
      echo "$COUNT"
      ;;
  esac
  
  # 4. Increment the counter
  COUNT=$((COUNT + 1))
done
