#!/usr/bin/env bash
# This script displays numbers from 1 to 20, replacing superstitious numbers with custom messages.

# 1. Initialize a counter variable
COUNT=1

# 2. Loop while COUNT is less than or equal to 20
while [ $COUNT -le 20 ]; do
  
  # 3. Use the 'case' statement to check for specific numbers
  case $COUNT in
    4)
      echo "bad luck from China"
      ;;
    9 | 13) # Grouping 9 and 13 as they have the same output
      echo "bad luck from Japan"
      ;;
    11 | 17) # Grouping 11 and 17 as they have the same output
      echo "bad luck from Italy"
      ;;
    *) # Default case: print the number itself
      echo "$COUNT"
      ;;
  esac
  
  # 4. Increment the counter
  COUNT=$((COUNT + 1))
done
